
@using WebUI.Areas.Admin.Models
@model List<AssignRoleViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].Exist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].Exist">@Model[i].RoleName</label>
        </div>
    }
    <button class="btn btn-info">Save Changes</button>
</form>

<a href="/Admin/AdminRole/UserRoleList/" class="btn btn-primary">Back To User List</a>
